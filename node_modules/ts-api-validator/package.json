{
  "name": "ts-api-validator",
  "version": "2.1.3",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/tsigel/ts-api-validator.git"
  },
  "main": "dist/ts-api-validator.min.js",
  "types": "index.ts",
  "files": [
    "src",
    "dist",
    "index.ts",
    "index.js"
  ],
  "dependencies": {
    "ts-utils": "^6.0.2"
  },
  "scripts": {
    "build": "npm run compile && npm run browserify && npm run uglify && rm -rf ./tmp",
    "compile": "npm run _compile-amd && npm run _compile-files && npm run _compile-test",
    "browserify": "npm run _browserify-full && npm run _browserify-partial && npm run _browserify-test",
    "uglify": "npm run _uglify-full && npm run _uglify-partial && npm run _uglify-amd",
    "pretest": "npm run build",
    "test": "node_modules/.bin/mocha test/tests.js && node_modules/.bin/karma start test/karma.conf.js",
    "preversion": "npm run test",
    "postversion": "git push origin HEAD && git push --tags && npm run build && npm publish",
    "_uglify-full": "node_modules/.bin/uglifyjs ./dist/ts-api-validator.js -o ./dist/ts-api-validator.min.js",
    "_uglify-partial": "node_modules/.bin/uglifyjs ./dist/ts-api-validator.partial.js -o ./dist/ts-api-validator.partial.min.js",
    "_uglify-amd": "node_modules/.bin/uglifyjs ./dist/ts-api-validator.amd.js -o ./dist/ts-api-validator.amd.min.js",
    "_browserify-full": "node_modules/.bin/browserify ./tmp/index.js -s ts-api-validator -o ./dist/ts-api-validator.js",
    "_browserify-partial": "node_modules/.bin/browserify ./tmp/index.js -s ts-api-validator -o ./dist/ts-api-validator.partial.js -u ts-utils",
    "_browserify-test": "node_modules/.bin/browserify ./test/tests.js -o ./test/test-file.js",
    "_compile-amd": "node_modules/.bin/tsc -p ./ -m amd --outFile dist/ts-api-validator.amd.js",
    "_compile-files": "node_modules/.bin/tsc -p ./ -m commonjs --outDir ./tmp",
    "_compile-test": "node_modules/.bin/tsc -p ./test"
  },
  "devDependencies": {
    "@types/chai": "^4.0.2",
    "@types/karma": "^0.13.36",
    "@types/mocha": "^2.2.41",
    "browserify": "^14.4.0",
    "chai": "^4.1.1",
    "karma": "^1.7.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-commonjs": "^1.0.0",
    "karma-mocha": "^1.3.0",
    "mocha": "^3.5.0",
    "typescript": "^2.4.2",
    "uglify-js": "^3.0.25"
  }
}
